<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/user_image_view"
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




    <TextView
        android:id="@+id/user_name_text_view"
        android:text="Name"
        android:layout_below="@id/user_image_view"
        android:background="@color/purple_200"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/user_country_text_view"
        android:text="Country"
        android:layout_below="@+id/user_name_text_view"
        android:background="@color/purple_200"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/user_hobby_text_view"
        android:text="Hobby"
        android:layout_below="@+id/user_country_text_view"
        android:background="@color/purple_200"
        android:textSize="16sp"
        android:layout_marginTop="20dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/user_dreams_text_view"
        android:text="Dreams"
        android:layout_below="@+id/user_country_text_view"
        android:layout_toEndOf="@id/user_hobby_text_view"
        android:background="@color/purple_200"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp" />

    <Button
        android:id="@+id/user_button_view"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/user_hobby_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_2button_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_button_view"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/user_button1_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="25dp" />

        <Button
            android:id="@+id/user_button2_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginLeft="64dp"
            android:layout_toEndOf="@id/user_button1_view"
            android:text="2"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/user_button1_view"
            tools:layout_editor_absoluteY="41dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_marginTop="20dp"
        android:text="I don`t bot"
        android:layout_below="@id/user_2button_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />

</RelativeLayout>